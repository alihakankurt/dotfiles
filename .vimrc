" Show line numbers
set number

" Enable syntax highlighting
syntax on

" Set shift width to 4 columns
set shiftwidth=4

" Set tab width to 4 columns
set tabstop=4

" Use spaces instead of tab character
set expandtab

" Do not backup files
set nobackup

" Do not warp lines
set nowrap

" Incrementally highlight matching characters while searching
set incsearch

" Ignore case while searching
set ignorecase

" Show matching words while searching
set showmatch

" Use highlight when searching
set hlsearch
